<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
	<id>@app_id@</id>
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>GPL-3.0-or-later</project_license>
  <developer id="org.gnome">
    <name>The GNOME Project</name>
  </developer>
  <launchable type="desktop-id">@app_id@.desktop</launchable>
  <name>Text Editor</name>
  <project_group>GNOME</project_group>
  <summary>Edit text files</summary>
  <description>
    <p>GNOME Text Editor is a simple text editor focused on a pleasing default experience.</p>
	</description>

  <url type="homepage">https://apps.gnome.org/TextEditor/</url>
  <url type="bugtracker">https://gitlab.gnome.org/GNOME/gnome-text-editor/issues</url>
  <url type="donation">https://www.gnome.org/donate/</url>
  <url type="vcs-browser">https://gitlab.gnome.org/GNOME/gnome-text-editor</url>
  <url type="contribute">https://welcome.gnome.org/app/TextEditor/</url>
  <url type="translate">https://l10n.gnome.org/module/gnome-text-editor/</url>

  <screenshots>
    <screenshot type="default">
      <image>https://static.gnome.org/appdata/gnome-43/text-editor/text-editor-1.png</image>
    </screenshot>
    <screenshot>
      <image>https://static.gnome.org/appdata/gnome-43/text-editor/text-editor-2.png</image>
    </screenshot>
  </screenshots>

  <branding>
    <color type="primary" scheme_preference="light">#e2dfd6</color>
    <color type="primary" scheme_preference="dark">#676759</color>
  </branding>

  <content_rating type="oars-1.1"/>

  <translation type="gettext">gnome-text-editor</translation>

  <requires>
    <display_length compare="ge">360</display_length>
    <internet>offline-only</internet>
  </requires>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <releases>
    <release version="49.0" date="2025-09-12"/>
