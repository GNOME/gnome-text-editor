<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.98"/>
  <template class="EditorSidebar" parent="GtkWidget">
    <style>
      <class name="view"/>
    </style>
    <child>
      <object class="GtkRevealer" id="revealer">
        <property name="transition-type">slide-right</property>
        <property name="reveal-child">true</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkBox">
                <property name="margin-bottom">6</property>
                <property name="margin-end">6</property>
                <property name="margin-start">6</property>
                <property name="margin-top">6</property>
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkEntry" id="search_entry">
                    <property name="primary-icon-name">edit-find-symbolic</property>
                    <property name="width-chars">5</property>
                    <property name="hexpand">true</property>
                    <property name="tooltip-text" translatable="yes">Search documents (Ctrl+K)</property>
                    <signal name="activate" handler="editor_sidebar_search_entry_activate_cb" swapped="true" object="EditorSidebar"/>
                    <signal name="changed" handler="editor_sidebar_search_entry_changed_cb" swapped="true" object="EditorSidebar"/>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="open_button">
                    <property name="icon-name">document-open-symbolic</property>
                    <property name="action-name">win.open</property>
                    <property name="tooltip-text" translatable="yes">Open document (Ctrl+O)</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Recent Documents</property>
                <property name="margin-start">6</property>
                <property name="margin-top">9</property>
                <property name="margin-bottom">6</property>
                <property name="margin-end">6</property>
                <property name="halign">start</property>
                <style>
                  <class name="heading"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <property name="orientation">horizontal</property>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow">
                <property name="hscrollbar-policy">never</property>
                <property name="vexpand">true</property>
                <child>
                  <object class="GtkListBox" id="list_box">
                    <signal name="row-activated" handler="editor_sidebar_row_activated_cb" swapped="true" object="EditorSidebar"/>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
