<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.98"/>
  <template class="EditorTab" parent="GtkBin">
    <property name="hexpand">true</property>
    <child>
      <object class="GtkCenterBox">
        <child type="start">
          <object class="GtkStack" id="stack">
            <property name="transition-type">crossfade</property>
            <property name="homogeneous">true</property>
            <property name="halign">end</property>
            <property name="hexpand">true</property>
            <property name="margin-end">6</property>
            <child>
              <object class="GtkLabel" id="empty"/>
            </child>
            <child>
              <object class="GtkLabel" id="is_modified">
                <property name="label">â€¢</property>
              </object>
            </child>
          </object>
        </child>
        <child type="center">
          <object class="GtkLabel" id="title">
            <property name="hexpand">false</property>
            <property name="width-chars">5</property>
            <property name="ellipsize">middle</property>
          </object>
        </child>
        <child type="end">
          <object class="GtkButton" id="close_button">
            <property name="action-name">page.close</property>
            <property name="icon-name">window-close-symbolic</property>
            <property name="margin-start">6</property>
            <property name="halign">end</property>
            <property name="focus-on-click">false</property>
            <property name="tooltip-text" translatable="yes">Close Document</property>
            <style>
              <class name="small-button"/>
              <class name="flat"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
