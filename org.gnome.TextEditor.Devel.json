{
    "app-id" : "org.gnome.TextEditor.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.36",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-text-editor",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*"
    ],
    "cleanup" : [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "wayland",
            "buildsystem" : "autotools",
            "builddir" : true,
            "config-opts" : [
                "--disable-documentation"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/wayland-project/wayland.git"
                }
            ]
        },
        {
            "name": "graphene",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "--libdir=/app/lib",
                "-Dtests=false",
                "-Dbenchmarks=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ebassi/graphene.git"
                }
            ]
        },
        {
            "name" : "libsass",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts": [
                "--libdir=/app/lib"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/libsass.git",
                    "branch" : "meson"
                }
            ]
        },
        {
            "name" : "sassc",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts": [
                "--libdir=/app/lib"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/sassc.git",
                    "branch" : "meson"
                }
            ]
        },
        {
            "name": "gtk",
            "buildsystem": "meson",
            "builddir": true,
            "cleanup" : [
                "/bin"
            ],
            "config-opts": [
                "--libdir=/app/lib"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/gtk.git",
                    "branch" : "master"
                }
            ]
        },
        {
            "name" : "gtksourceview",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gtksourceview.git",
                    "branch" : "wip/chergert/gsv-gtk4"
                }
            ]
        },
        {
            "name" : "gnome-text-editor",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
                "--libdir=/app/lib",
                "-Ddevelopment=true"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/chergert/gnome-text-editor.git"
                }
            ]
        }
    ]
}
